<Window x:Class="WpfApp2.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Ввод данных" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="ID:"/>
            <TextBox x:Name="IDTextBox" IsReadOnly="True" BorderBrush="{x:Null}" />
            <Label Content="Название:"/>
            <TextBox x:Name="TitleTextBox"/>
            <Label Content="Год публикации:"/>
            <TextBox x:Name="YearPublishedTextBox"/>
            <Label Content="ID автора:"/>
            <TextBox x:Name="AuthorIDTextBox"/>
            <Label Content="ID жанра:"/>
            <TextBox x:Name="GenreIDTextBox"/>
            <Button Content="Сохранить" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
